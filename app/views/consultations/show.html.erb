<div id="display">
  <div class="vertical">
    <%= render "shared/vertical" %>
  </div>


  <div class="container">
  <% civil= 'https://res.cloudinary.com/dp693fkkc/image/upload/v1668897253/AnFin/civil_ksy2rq.jpg' %>
  <% laboral= 'https://res.cloudinary.com/dp693fkkc/image/upload/v1668897236/AnFin/laboral_vzaujd.jpg'%>
  <% cobranza = 'https://res.cloudinary.com/dp693fkkc/image/upload/v1668897245/AnFin/cobranza_sfnsnn.jpg '%>

  <% @demandas.each do |demanda| %>
    <div class="card-product">
      <% if demanda.tipo.upcase == 'CIVIL'  %>
        <img src="<%=civil %>" />
      <% elsif demanda.tipo.upcase == 'LABORAL'  %>
        <img src="<%=laboral %>" />
      <% elsif demanda.tipo.upcase == 'COBRANZA'  %>
        <img src="<%=cobranza %>" />
      <% end %>

    <div class="card-product-infos">
        <h3> <%= demanda.tipo.capitalize %> </h3>
        <h6> <%= demanda.estado %></h6>
        <h6> <%= demanda.proc %></h6>
        <h6> <%= demanda.etapa %></h6>
        <h6> <%=  demanda.tribunal %></h6>
        <h6> <%=  demanda.fechaingreso %></h6>
    </div>

    </div>
  <% end %>

    <br>

      <div class="buttons">
      <%= link_to "Back", consultations_path, class: "buttons btn-alert" %>
      </div>

  </div>

</div>


